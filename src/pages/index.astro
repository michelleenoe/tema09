import Form from "../Components/Form.astro";
import Sections from "../Components/Sections.astro"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>#CaBrighterFuture</title>
    <style>
      @font-face {
        font-family: "Nexa Bold";
        src: url("../../public/fonts/nexa-bold-free-font/Nexa-Bold.otf")
          format("opentype");
      }

      :root {
        --font-family: "Nexa Bold", sans-serif;
        --primary-color: #005baa;
        --secondary-color: #0068cf;
        --text-color: #333;
        --background-color: #e6e6df;
        --font-color:#fff;
      }

      body {
        letter-spacing: 0.08px;
        font-family: var(--font-family);
        margin: 20px;
        padding: 50px;
        color: var(--text-color);
        background-color: var(--background-color);
      }

      header {
        border-top-left-radius: 100px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: var(--secondary-color);
        color: #fff;
      }

      img {
        margin-right: 20px;
        margin-bottom: 0;
      }

      h1 {
        text-transform: uppercase;
        margin: 10px;
      }

      nav {
        text-align: center;
        padding: 10px;
        font-family: var(--font-family);
        background-color: var(--primary-color);
      }
      .text-wrapper1 {
        color:var(--font-color);
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 100px;
        background-color: #054674;
        width: 50%;
        min-width: 100px;
        max-width: 600px;
        padding: 65px 65px 87px;
      }
      .text-wrapper1 h3 {
        color: #fff;
      }

      nav a {
        text-decoration: none;
        margin: 0 10px;
        color: #fff;
        font-weight: bold;
        font-size: 16px;
      }

      section {
        padding: 40px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        background-color: #f1f1f1;
      }

      h2,
      h3 {
        margin-bottom: 20px;
        color: var(--primary-color);
      }

      iframe {
        max-width: 100%;
        height: 315px;
        overflow: hidden;
      }

      .section-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-gap: 20px;
      }

      .section-grid iframe {
        max-width: 100%;
        height: 315px;
        margin-right: 20px;
      }

      .section-grid .text-wrapper {
        text-align: left;
      }

      section.active-section {
        border: 2px solid var(--primary-color);
      }

      @media screen and (max-width: 768px) {
        .section-grid {
          grid-template-columns: 1fr;
        }
        .section-grid iframe {
          margin-right: 0;
        }
      }
    </style>
  </head>
<header>
    </header>
    <body>
    <Sections/>
    </body>
    <footer>

    </footer>
